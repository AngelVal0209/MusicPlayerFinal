@model MusicPlayer.ViewM.LoginUVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #000;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgb(250 196 76 / 0.3);
            padding: 30px 40px;
            max-width: 400px;
            width: 100%;
            transition: transform 0.3s ease;
        }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgb(250 196 76 / 0.5);
        }

        h1 {
            color: #fac44c;
            font-weight: 700;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        label {
            font-weight: 600;
        }

        input.form-control {
            border: 2px solid #fac44c;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input.form-control:focus {
            border-color: #e89c00;
            box-shadow: 0 0 5px #fac44c;
            outline: none;
        }

        button.btn-login {
            background-color: #fac44c;
            color: #000;
            font-weight: 700;
            border-radius: 50px;
            padding: 12px;
            width: 100%;
            font-size: 1.1rem;
            border: none;
            transition: background-color 0.3s ease;
        }

        button.btn-login:hover {
            background-color: #e89c00;
            color: #fff;
        }

        .form-text {
            margin-top: 0.25rem;
            color: #dc3545; /* Bootstrap danger color */
            font-size: 0.875rem;
        }

        .links {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
        }

        .links a {
            color: #fac44c;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .links a:hover {
            color: #e89c00;
            text-decoration: underline;
        }

        .alert-danger {
            background-color: #fdecea;
            border-color: #fac44c;
            color: #b02a0a;
            font-weight: 600;
            border-radius: 8px;
        }

        .alert-success {
            background-color: #e7f5e1;
            border-color: #a7d177;
            color: #3a6100;
            font-weight: 600;
            border-radius: 8px;
        }

        .logo-login {
            max-width: 120px;
            height: auto;
            display: inline-block;
        }

    </style>
</head>
<body>
    <div class="login-card shadow-sm">
        <div class="text-center mb-3">
            <img src="~/lib/Logo.png" alt="Logo Music Player" class="logo-login" />
        </div>
        <h1>Login</h1>


        <form asp-controller="Login" asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control" type="email" placeholder="correo@ejemplo.com" required />
                <span asp-validation-for="CorreoElectronico" class="form-text"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" placeholder="Tu contraseña" required minlength="6" />
                <span asp-validation-for="Contrasena" class="form-text"></span>
            </div>

            <button type="submit" class="btn-login">Iniciar sesión</button>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            @if (ViewData["Exito"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">
                    @ViewData["Exito"]
                </div>

                <script>
                    setTimeout(function () {
                        window.location.href = '/Home/Index';
                    }, 5000);
                </script>
            }

            <div class="links mt-4">
                ¿Aún no tienes cuenta? <a asp-controller="Login" asp-action="Registro">Regístrate aquí</a><br />
                ¿Olvidaste tu contraseña? <a asp-controller="Login" asp-action="RecuperarContraseña">Recupérala</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
