@model MusicPlayer.ViewM.RegistroUVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #fff8e1; /* un naranja muy suave, para no cansar */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #000;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .register-card {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(250, 196, 76, 0.3);
            padding: 30px 40px;
            width: 100%;
            max-width: 420px;
        }

            .register-card h2 {
                color: #fac44c;
                text-align: center;
                margin-bottom: 25px;
                font-weight: 700;
            }

        .logo-register {
            display: block;
            margin: 0 auto 20px auto;
            max-width: 130px;
            height: auto;
        }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border: 2px solid #fac44c;
            border-radius: 6px;
            padding: 10px 12px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #ffb300;
                box-shadow: 0 0 8px #ffb300aa;
                outline: none;
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 4px;
            display: block;
        }

        .btn-register {
            background-color: #fac44c;
            border: none;
            width: 100%;
            padding: 12px 0;
            font-weight: 700;
            font-size: 1.1rem;
            color: #000;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            margin-top: 15px;
        }

            .btn-register:hover {
                background-color: #e6b737;
                color: #000;
            }

        .alert-danger {
            background-color: #fce4e4;
            border-color: #fac44c;
            color: #a94442;
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 6px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="register-card shadow-sm">
        <img src="~/lib/Logo.png" alt="Logo Music Player" class="logo-register" />
        <h2>Registro de Usuario</h2>

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger">@ViewData["Mensaje"]</div>
        }

        <form asp-action="Registro" method="post" novalidate>
            <div class="form-group mb-3">
                <label asp-for="NombreUsuario"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CorreoElectronico"></label>
                <input asp-for="CorreoElectronico" type="email" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contrasena"></label>
                <input asp-for="Contrasena" type="password" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmarContraseña"></label>
                <input asp-for="ConfirmarContraseña" type="password" class="form-control" />
                <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaNacimiento"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Genero"></label>
                <select asp-for="Genero" class="form-control">
                    <option value="">Seleccione un género</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-register">Registrarse</button>
            <a asp-controller="Login" asp-action="Login" class="btn btn-link mt-3 d-block text-center" style="color:#fac44c; font-weight:600;">
                Volver al login
            </a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
