@model MusicPlayer.ViewM.PlaylistUVM

@{
    ViewData["Title"] = "Crear Playlist";
}

<style>
    body {
        background: linear-gradient(135deg, #fff5cc 0%, #fac44c 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #4a4a4a;
        min-height: 100vh;
        padding: 20px;
    }

    h2 {
        color: #a36c00;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 1px 1px 3px rgba(163, 108, 0, 0.4);
    }

    form.form-group {
        max-width: 400px;
        margin: 0 auto;
        background: #fff5cc;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(250, 196, 76, 0.3);
    }

    label.form-label {
        font-weight: 600;
        color: #a36c00;
        margin-bottom: 8px;
        display: block;
        font-size: 1.1rem;
    }

    input.form-control {
        border-radius: 8px;
        border: 2px solid #fac44c;
        padding: 10px 15px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: #e89c00;
            box-shadow: 0 0 8px #e89c00aa;
            outline: none;
        }

    .text-danger {
        font-weight: 700;
        margin-top: 5px;
        display: block;
        font-size: 0.9rem;
    }

    button.btn-primary {
        background-color: #fac44c;
        border: none;
        color: #4a4a4a;
        font-weight: 700;
        padding: 10px 20px;
        border-radius: 50px;
        cursor: pointer;
        width: 100%;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
        margin-top: 15px;
    }

        button.btn-primary:hover {
            background-color: #e89c00;
            color: #fff;
        }

    a.btn-secondary {
        display: block;
        text-align: center;
        margin-top: 15px;
        background-color: #a36c00;
        border-color: #a36c00;
        color: #fff;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 50px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        a.btn-secondary:hover {
            background-color: #fac44c;
            color: #4a4a4a;
            border-color: #fac44c;
        }
</style>

<h2>Crear Nueva Playlist</h2>

<form asp-action="CrearPlaylist" method="post" class="form-group">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre de la playlist" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Playlist</button>
    <a asp-action="MisPlaylists" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
